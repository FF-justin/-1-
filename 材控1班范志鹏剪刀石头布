#include <stdio.h>
#include <time.h>
#include <stdlib.h>
struct player{
 int socre,i;
 char name;
};
  
void main(){
    int com,player,j=0,win=0,lose=0,he=0,n,winn,losee,hee;    
	
	   struct player input_player();     
	   struct player p;   
	printf("|-------------------------------------------------------------------------|\n");
