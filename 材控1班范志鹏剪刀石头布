		   break;
       case 1:case -2:
		   printf("电脑赢了\n");
		   lose++;j++;
		   break; 
       case -1:case 2:
		   printf("你赢了\n");
		   win++;j++;
		   break;
		   
	   }
    } 
    printf("您获胜的局数是%d，电脑获胜的局数是%d，平手的局数是%d",win,lose,he);   /*输出结果*/
    p=input_player();
	   
	   }
    else if(n==3){
	 printf("|-----恕学生能力不足，本环节尚未完成...................很伤心啊（T-T）----|\n"); 
